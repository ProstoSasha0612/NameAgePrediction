<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NameAgePrediction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accent_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.FocusedText">
        <item name="color">#555E65</item>
        <item name="android:textSize">14sp</item>
        <item name="font">@font/rubik_500</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.UnfocusedText">
        <item name="color">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/rubik_400</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.SearchViewText">
        <item name="color">@color/search_view_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">18sp</item>
        <item name="fontFamily">@font/abeezee_400</item>
    </style>

    <style name="Button.Corner" parent="">
        <item name="cornerSize">8dp</item>
    </style>
</resources>