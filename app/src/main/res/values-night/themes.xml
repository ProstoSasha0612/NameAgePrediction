<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NameAgePrediction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.FocusedText">
        <item name="color">#555E65</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.UnfocusedText">
        <item name="color">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
    </style>
</resources>